<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.EducationApplication"
        tools:targetApi="31">
        <activity
            android:name=".ClassPage"
            android:exported="false" />
        <activity
            android:name=".util.views.CreateClass"
            android:exported="false" />
        <activity
            android:name=".util.views.Fragment.SearchFragment"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@layout/fragment_search" />
        </activity>
        <activity
            android:name=".util.views.MainActivity"
            android:exported="false" />
        <activity
            android:name=".util.views.SignupView"
            android:exported="false" />
        <activity
            android:name=".util.views.LoginView"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>